{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/main.ts",
    "!src/**/*.module.ts"
  ],
  "coverageDirectory": "./coverage",
  "testPathIgnorePatterns": ["/node_modules/"],
  "roots": ["<rootDir>/tests/"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^tests/(.*)$": "<rootDir>/tests/$1"
  },
  "verbose": true,
  "clearMocks": true,
  "resetMocks": true,
  "passWithNoTests": true
}
